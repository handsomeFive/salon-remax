@import "./../../remax-styles.wxss";
.app {
  background-color: #f1f2f5;
  height: 100vh;
}
.nav {
  width: 100%;
  position: fixed;
  box-sizing: border-box;
}
.navTitle {
  position: fixed;
  text-align: center;
  width: 100%;
  color: #fff;
  z-index: 999;
}
.info {
  width: 100%;
  height: 420rpx;
  position: relative;
  background: #fff;
}
.info image {
  width: 100%;
  height: 342rpx;
}
.contentWrapper {
  position: relative;
  width: 100%;
  height: 228rpx;
  padding: 0 32rpx;
  display: flex;
  position: absolute;
  left: 0;
  bottom: 20rpx;
  box-sizing: border-box;
}
.content {
  background-color: #fff;
  height: 228rpx;
  width: auto;
  flex: 1;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0px 0px 20rpx 0px rgba(224, 233, 255, 0.6);
}
.function {
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  background: #fff;
}
.functionTitle {
  padding: 30rpx 0 24rpx;
  font-size: 40rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #454553;
  line-height: 44rpx;
}
.items {
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 24rpx;
  justify-content: space-between;
}
.item {
  background: #ffffff;
  box-shadow: 0px 0px 20rpx 0px rgba(224, 233, 255, 0.6);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  height: 154rpx;
  width: 330rpx;
  display: flex;
  align-items: center;
}
.item image {
  width: 74rpx;
  height: 74rpx;
  margin: 0 24rpx;
}
.item text {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #454553;
  line-height: 48rpx;
}
/* .avatarWrapper; */
.avatarWrapper {
  padding: 32rpx 32rpx 0 32rpx;
  display: flex;
  align-items: center;
}
.info .avatar {
  width: 118rpx;
  height: 118rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}
.nameText {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #29374d;
}
.subtitle {
  padding: 0 32rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #6a6a6a;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.subtitleBtn {
  width: 200rpx;
  /* height: 60px; */
  border: 0;
  margin: 0;
}
.icon {
  position: absolute;
  right: 84rpx;
  top: 56rpx;
}
.qrCode {
  position: fixed;
  z-index: -100;
}
.form {
  width: 590rpx;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
}
.formItem {
  height: 108rpx;
  padding-bottom: 24rpx;
  font-size: 28rpx;
  color: #bfbfbf;
}
.phone {
  height: 108rpx;
}
.footer {
  display: flex;
  justify-content: space-between;
}
.footer .btn {
  width: 243rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 45rpx;
}
.footer .btn.cancel {
  background: #f1f1f1;
  color: #6a6a6a;
}
.footer .btn.ok {
  background: #1e8aff;
  color: #ffffff;
}
.item {
  height: 100rpx;
}

