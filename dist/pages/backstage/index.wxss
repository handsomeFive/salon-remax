.app {
  background-color: #f1f2f5;
  height: 100vh;
}
.nav {
  width: 100%;
  position: fixed;
  box-sizing: border-box;
}
.navTitle {
  position: fixed;
  text-align: center;
  width: 100%;
  color: #fff;
  z-index: 999;
}
.info {
  width: 100%;
  height: 420rpx;
  position: relative;
  background: #fff;
}
.info image {
  width: 100%;
  height: 342rpx;
}
.contentWrapper {
  width: 100%;
  height: 228rpx;
  padding: 0 32rpx;
  display: flex;
  position: absolute;
  left: 0;
  bottom: 20rpx;
  box-sizing: border-box;
}
.content {
  background-color: #fff;
  height: 228rpx;
  line-height: 228rpx;
  width: auto;
  flex: 1;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0px 0px 20rpx 0px rgba(224, 233, 255, 0.6);
}
.userInfo {
  font-size: 38rpx;
  padding-left: 48rpx;
}
.function {
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  background: #fff;
  padding-bottom: 40rpx;
}
.functionTitle {
  padding: 30rpx 0 24rpx;
  font-size: 40rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #454553;
  line-height: 44rpx;
}
.items {
  /* width: 100; */
  display: grid;
  grid-template-columns: 50% 50%;
  box-shadow: 0px 0px 20rpx 0px rgba(224, 233, 255, 0.6);
  background: #ffffff;
  border-radius: 24rpx;
}
.item {
  height: 128rpx;
  line-height: 128rpx;
  font-size: 36rpx;
  text-align: center;
  font-family: PingFang-SC-Bold, PingFang-SC;
}

