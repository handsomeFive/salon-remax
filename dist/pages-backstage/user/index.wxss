@import "./../../remax-styles.wxss";
.app {
  background-color: #f6f7f8;
}

.item {
  background-color: #fff;
  padding: 0 24rpx;
  /* box-sizing: content-box; */
}
.info {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content {
  height: 160rpx;
  border-bottom: 1rpx solid #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.add {
  color: #52c41a;
  text-align: right;
}
.del {
  color: #f5222d;
  text-align: right;
}
.title {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #2a2a2a;
  line-height: 45rpx;
}
.dec {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #9a9a9a;
  line-height: 40rpx;
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.part {
  display: flex;
  align-items: center;
}
.form {
  width: 590rpx;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
}
.formItem {
  height: 108rpx;
  padding-bottom: 24rpx;
  font-size: 28rpx;
  color: #bfbfbf;
}
.phone {
  height: 108rpx;
}
.footer {
  display: flex;
  justify-content: space-between;
}
.footer .btn {
  width: 243rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 45rpx;
}
.footer .btn.cancel {
  background: #f1f1f1;
  color: #6a6a6a;
}
.footer .btn.ok {
  background: #1e8aff;
  color: #ffffff;
}
.search {
  padding: 12rpx;
}

